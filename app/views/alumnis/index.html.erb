<h1>Listing alumnis</h1>

<table>
  <tr>
    <th>First name</th>
    <th>Last name</th>
    <th>Birthday</th>
    <th>Schule</th>
    <th>Country</th>
    <th>Email</th>
    <th>Graduation year</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @alumnis.each do |alumni| %>
  <tr>
    <td><%= alumni.first_name %></td>
    <td><%= alumni.last_name %></td>
    <td><%= alumni.birthday %></td>
    <td><%= alumni.school_id %></td>
    <td><%= alumni.country %></td>
    <td><%= alumni.email %></td>
    <td><%= alumni.graduation_year %></td>
	<td><%= link_to 'MeinJahr', :controller => "alumnis",:action => "get_my_graduationyear", 
								:year => alumni.graduation_year, :school => alumni.school_id %></td>
    <td><%= link_to 'Show', alumni %></td>
    <td><%= link_to 'Edit', edit_alumni_path(alumni) %></td>
    <td><%= link_to 'Destroy', alumni, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

