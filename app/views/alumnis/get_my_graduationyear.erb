<h3>Willkommen auf der <%= @my_classmates[0].school.name %> Jahrgang <%=  @my_classmates[0].graduation_year %></h3>

<table>
  <tr>
    <th>First name</th>
    <th>Last name</th>
    <th>Birthday</th>
    <th>Street</th>
    <th>City</th>
    <th>Country</th>
    <th>Phone</th>
    <th>Email</th>
  </tr>

<% @my_classmates.each do |alumni| %>
  <tr>
    <td><%= alumni.first_name %></td>
    <td><%= alumni.last_name %></td>
    <td><%= alumni.birthday %></td>
    <td><%= alumni.street %></td>
    <td><%= alumni.city %></td>
    <td><%= alumni.country %></td>
    <td><%= alumni.phone %></td>
    <td><%= alumni.email %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Alumni', new_alumni_path %>
